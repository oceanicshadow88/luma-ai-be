{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/test",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@loaders/*": [
        "loaders/*"
      ],
      "@test/*": [
        "test/*"
      ],
    },
    "rootDirs": [
      "src",
      "loaders",
      "test"
    ],
    "types": ["node", "jest"]
  },
  "include": [
    "src",
    "test",
    "loaders",
    "eslint.config.js",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}