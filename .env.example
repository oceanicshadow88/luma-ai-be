PORT=8000
LOG_LEVEL=info
NODE_ENV=local

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT=100

MONGODB_URI=mongodb://localhost:27017/luma-ai
JWT_SECRET=your_jwt_secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret
DEFAULT_JWT_EXPIRES_IN='1d'
DEFAULT_JWT_REFRESH_EXPIRES_IN='7d'

# Sonar
SONAR_HOST_URL=http://localhost:9000                     
SONAR_TOKEN=your_token 

# Password Reset Configuration
RESET_CODE_EXPIRY=300
RESET_CODE_RATE_LIMIT=1
RESET_CODE_RATE_LIMIT_EXPIRY=60

# Email Configuration
EMAIL_FROM=noreply@luma-ai.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
